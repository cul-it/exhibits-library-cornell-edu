      <p><small><a href="https://confluence.cornell.edu/display/exhibits/Curator+Documentation"><%= t(:'local_documentation') %></a></small></p>
      <% end %>
      <p class="version"><small>Cornell Exhibits <%= Version::VERSION %></small></p>
      <p class="version"><small>Spotlight <%= SPOTLIGHT_VERSION %></small></p>
    </div>
    <div class="col-sm-2">
      <% unless current_user %>
        <p><%= link_to t('spotlight.header_links.login'), main_app.new_user_session_path %></p>
      <% end %>
    </div>
    </div>
  </div>
</footer>
