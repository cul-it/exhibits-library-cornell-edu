<% document_presenter(document).field_presenters.each do |field_presenter| %>
  <% custom_presenter = CustomFieldPresenter.new(field_presenter.view_context, field_presenter.document, field_presenter.field_config, field_presenter.options) %>
  <%= render(
    Blacklight::DocumentMetadataComponent.new(
      fields: [custom_presenter],
      show: true
    )
  ) %>
<% end %>
<% ### BEGIN CUSTOMIZATION %>
<%
  doc_id = document['id'] || ''
  exhibit_slug = (document.has_key?('spotlight_exhibit_slugs_ssim')) && (document['spotlight_exhibit_slugs_ssim'].length > 0) ? document['spotlight_exhibit_slugs_ssim'][0] : ''

%>
<div id="related-pages" docid="<%= doc_id %>" exhibitslug="<%= exhibit_slug %>" rooturl="<%= root_url %>"></div>
<% ### END CUSTOMIZATION %>
