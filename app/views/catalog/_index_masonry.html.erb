<div class="masonry document col-xs-6 col-md-3">
  <div class="thumbnail">
    <%= render_thumbnail_tag(document, {}, :counter => document_counter_with_offset(document_counter)) %>
    <div class="caption">
      <% if document["full_title_tesim"].present? %>
      <%= link_to document["full_title_tesim"][0], document %>
      <% end %>
    </div>
  </div>
</div>
